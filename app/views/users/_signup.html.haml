- if ab_test(:sign_in_with_facebook) == :regular_signup
  #title
    %h3  #{ t('layouts.application.signup') }
  = form_for @user, :url => users_path(:ab_test => true), :html => {:class => "form"} do |f|
    = f.hidden_field :invitation_token
    = f.hidden_field :affiliation_token
    = hidden_field_tag :ref, @url_invitation.ref
    .field
      .label
        = f.label :email, t(:email, :scope => "users.form")
      .input
        = f.email_field :email, :tabindex => @signup_index
  
    .field
      .label
        = f.label :password, t(:password, :scope => "users.form")
      .input
        = f.password_field :password, :tabindex => @signup_index + 1
  
    .field
      .label
        = f.label :password_confirmation, t(:password_confirmation, :scope => "users.form")
      .input
        = f.password_field :password_confirmation, :tabindex => @signup_index + 2
  
    .field
      .label
        = f.label :name, t(:name, :scope => "users.form")
      .input
        = f.text_field :name, :tabindex => @signup_index + 3
  
    .field.agree
      = f.check_box :agrees_with_terms_of_service, :tabindex => @signup_index + 4
      = t("users.new.agree", :privacy => privacy_path, :tos => tos_path)
  
    .submit
      = submit_tag t('.submit'), :tabindex => @signup_index + 5
- else
  %h3 #{ t('.sign_up_with_facebook') }
  = link_to image_tag('share/facebook_32.png'), '/auth/facebook'
