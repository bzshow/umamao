- question = link_to h(@question.title), url_for(:host => @group.domain,
                                                 :controller => "questions",
                                                 :action => "show",
                                                 :id => @question.slug)
%p= t('notifier.global.hi', :user => h(@user.first_name))

%p= t('.author', :user => h(@comment.user.name), :question => question)

%p= h(@comment.body)

