- question = link_to h(@question.title), url_for(:host => @domain, :controller => "questions", :action => "show", :id => @question.slug)

%p
  = t('notifier.global.hi', :user => h(@user.first_name))
%p
  = t('.author', :user => h(@search_result.user.name))
%p
  = shapado_auto_link(markdown(@search_result.summary, :group => @group))
%p
  = t('.question', :question => question)

= simple_format(t('notifier.global.signature'))
